function add()
	return '
	
@SP
A=M
A=A-1
D=M
A=A-1
M=M+D
@SP
M=M-1'

end

function sub()
	return '
				
@SP
A=M
A=A-1
D=M
A=A-1
M=M-D
@SP
M=M-1'
end

function neg()
	return '

@SP
A=M
A=A-1
D=M
M=-D'

end

function eq2(count_true, count_false)
	return @"

@SP
A=M
A=A-1
D=M
A=A-1
D=M-D
@IF_TRUE$count_true
D;JEQ
D=0
@SP
A=M-1
A=A-1
M=D
@IF_FALSE$count_false
0;JMP
(IF_TRUE$count_true)
D=-1
@SP
A=M-1
A=A-1
M=D
(IF_FALSE$count_false)    
@SP
M=M-1"
end

