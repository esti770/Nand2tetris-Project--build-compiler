M=D
@SP
M=M+1

@THIS
D=M
@SP
A=M
M=D
@SP
M=M+1

@THAT
D=M
@SP
A=M
M=D
@SP
M=M+1

@$numOfArgs
D=A
@SP
D=M-D
@ARG
M=D

@SP
D=M
@LCL
M=D

@$nameOfFunc
0;JMP

($nameOfFunc$point$ReturnAddress$count_call)'
end

function f_unction(nameOfFunc, localVariables)
	return @'
    
